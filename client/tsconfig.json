{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Custom */
    "baseUrl": "src",
    "paths": {
      "@Admin/*": ["features/admin/*"],
      "@Auth/*": ["features/auth/*"],
      "@Common/*": ["common/*"],
      "@Donation/*": ["features/donation/*"],
      "@Home/*": ["features/home/*"],
      "@Posts/*": ["features/posts/*"],
      "@Ratings/*": ["features/ratings/*"],
      "@Requests/*": ["features/requests/*"],
      "@Rewards/*": ["features/rewards/*"],
      "@Stats/*": ["features/stats/*"],
      "@Swaps/*": ["features/swaps/*"],
      "@Turns/*": ["features/turns/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
